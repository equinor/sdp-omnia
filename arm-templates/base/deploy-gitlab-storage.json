{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters":
    {
    "storageAccountName": {
      "type": "string"
    },
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "dbName": {
      "type": "string"
    },
    "tags": {
      "defaultValue": {},
      "type": "object"
    },
    "buckets": {
      "type": "array",
      "defaultValue": [
        "artifacts",
        "backup",
        "lfs",
        "packages",
        "pseudonymizer",
        "registry",
        "tmp",
        "uploads"
      ]
    },
    "environment":{
      "type":"string"
    },
    "replication":{
      "type":"string",
      "defaultValue":"Standard_LRS"
    },
    "backupRetention":{
      "type":"int",
      "defaultValue": 35
    }

  },
  "variables": {
      "rootRgName": "[concat('sdpaks-', parameters('environment'))]",
      "managedClusterName": "[concat(variables('rootRgName'), '-k8s')]",
      "rootRgId": "[concat('/subscriptions/b18da12e-efa1-4642-8fec-b6580b00212c/resourceGroups/', variables('rootRgName'))]",
      "privateDnsZoneId": "[concat(variables('rootRgId'), '/providers/Microsoft.Network/privateDnsZones/', parameters('dbName'), '.private.postgres.database.azure.com')]",
      "vnetPrefix": "[concat(variables('rootRgId'), '/providers/Microsoft.Network/virtualNetworks/', variables('rootRgName'), '-vnet')]",
      "vnetSubnetId": "[concat(variables('vnetPrefix'), '/subnets/', 'aks-subnet')]",
      "vnetSubnetPsqlId": "[concat(variables('vnetPrefix'), '/subnets/', 'aks-subnet-psql')]",
      "virtualNetworkLinkId": "[concat(variables('privateDnsZoneId'), '/virtualNetworkLinks/', uniqueString(variables('vnetPrefix')))]"
  },
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2021-06-01",
      "name": "[parameters('dbName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
          "[variables('virtualNetworkLinkId')]"
      ],
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard_D2ds_v4",
        "tier": "GeneralPurpose"
      },
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "availabilityZone": "",
        "backup": {
          "backupRetentionDays": "[parameters('backupRetention')]",
          "geoRedundantBackup": "Disabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        },
        "network": {
          "delegatedSubnetResourceId": "[variables('vnetSubnetPsqlId')]",
          "privateDnsZoneArmResourceId": "[variables('privateDnsZoneId')]"
        },
        "storage": {
            "storageSizeGB": 128
        },
        "version": "13"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-04-01",
      "name": "[parameters('storageAccountName')]",
      "location": "norwayeast",
      "sku": {
          "name": "[parameters('replication')]",
          "tier": "Standard"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
            "bypass": "None",
            "defaultAction": "Deny",
            "virtualNetworkRules": [
              {
                  "id": "[variables('vnetSubnetId')]", // Allow connection only from the environment's AKS cluster
                  "action": "Allow"
              }
            ]
        },
        "accessTier": "Hot"
      }
    },
    {
      "name": "[concat(parameters('storageAccountName'), '/default/', 'gitlab-', parameters('buckets')[copyIndex()], '-storage')]",
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "comments": "Buckets under the selected storage account",
      "apiVersion": "2018-07-01",
      "dependsOn": [
        "[parameters('storageAccountName')]"
      ],
      "copy": {
        "name": "storagecopy",
        "count": "[length(parameters('buckets'))]"
      },
      "properties": {
        "publicAccess": "None"
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    },
    "postgresDbName":{
      "type": "string",
      "value": "[parameters('dbName')]"
    },
    "vnetSubnetId": {
      "type": "string",
      "value": "[reference(resourceId(variables('rootRgName'),'Microsoft.ContainerService/managedClusters/', variables('managedClusterName')), '2019-08-01').agentPoolProfiles[0].vnetSubnetID]"
    }
  }
}
